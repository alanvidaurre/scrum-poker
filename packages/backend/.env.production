# Configuración para ambiente de producción
NODE_ENV=production
PORT=8090
HOST=0.0.0.0

# URLs permitidas para CORS (actualizar con URLs reales de producción)
CORS_ORIGINS=https://scrum-poker.company.com

# Configuración de Socket.io
SOCKET_CORS_ORIGINS=https://scrum-poker.company.com

# Configuración de logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Configuración de la aplicación
APP_NAME=Scrum Poker Backend - Production
VERSION=1.0.0

# Configuración de base de datos (para futuras implementaciones)
# DB_TYPE=postgresql
# DB_CONNECTION_STRING=postgresql://user:password@prod-db:5432/scrumpoker

# Configuración de sesiones (para futuras implementaciones)
# SESSION_SECRET=production-secret-key-secure
# SESSION_TIMEOUT=3600000

# Configuración de límites
MAX_ROOMS=1000
MAX_PARTICIPANTS_PER_ROOM=50
ROOM_CODE_LENGTH=6
ROOM_EXPIRY_HOURS=48

# Configuración de monitoreo
ENABLE_HEALTH_CHECKS=true
METRICS_ENABLED=true

# Configuración de seguridad
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de SSL/TLS
FORCE_HTTPS=true
SECURE_COOKIES=true