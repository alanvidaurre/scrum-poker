# Configuración para ambiente de desarrollo
NODE_ENV=development
PORT=8090
HOST=localhost

# URLs permitidas para CORS
CORS_ORIGINS=http://localhost:3030,http://localhost:3000

# Configuración de Socket.io
SOCKET_CORS_ORIGINS=http://localhost:3030,http://localhost:3000

# Configuración de logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Configuración de la aplicación
APP_NAME=Scrum Poker Backend
VERSION=1.0.0

# Configuración de base de datos (para futuras implementaciones)
# DB_TYPE=memory
# DB_CONNECTION_STRING=

# Configuración de sesiones (para futuras implementaciones)
# SESSION_SECRET=dev-secret-key
# SESSION_TIMEOUT=3600000

# Configuración de límites
MAX_ROOMS=100
MAX_PARTICIPANTS_PER_ROOM=20
ROOM_CODE_LENGTH=6
ROOM_EXPIRY_HOURS=24