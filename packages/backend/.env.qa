# Configuración para ambiente de QA
NODE_ENV=qa
PORT=8090
HOST=0.0.0.0

# URLs permitidas para CORS (actualizar con URLs de QA)
CORS_ORIGINS=https://qa-scrum-poker.company.com,http://localhost:3030

# Configuración de Socket.io
SOCKET_CORS_ORIGINS=https://qa-scrum-poker.company.com,http://localhost:3030

# Configuración de logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Configuración de la aplicación
APP_NAME=Scrum Poker Backend - QA
VERSION=1.0.0

# Configuración de base de datos (para futuras implementaciones)
# DB_TYPE=postgresql
# DB_CONNECTION_STRING=postgresql://user:password@qa-db:5432/scrumpoker

# Configuración de sesiones (para futuras implementaciones)
# SESSION_SECRET=qa-secret-key-change-this
# SESSION_TIMEOUT=3600000

# Configuración de límites
MAX_ROOMS=200
MAX_PARTICIPANTS_PER_ROOM=20
ROOM_CODE_LENGTH=6
ROOM_EXPIRY_HOURS=24

# Configuración de monitoreo
ENABLE_HEALTH_CHECKS=true
METRICS_ENABLED=true